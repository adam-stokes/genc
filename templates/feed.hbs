<?xml version="1.0" encoding="UTF-8"?>
    <rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
        <channel>
            <title>{{ site.sitename }}</title>
            <description>{{ site.description }}</description>
            <link>{{ site.baseUrl }}</link>

            <atom:link href="{{ site.baseUrl}}/{{feed}}" rel="self" type="application/rss+xml" />

            {{#each this}}
                <item>
                    <title>{{ this.title }}</title>
                    <description>{{ this.compiled }}</description>
                    <pubDate>{{xmldate this.date }}</pubDate>
                    <link>{{link this.permalink }}</link>
                    <guid isPermaLink="true">{{link this.permalink }}</guid>
                </item>
            {{/each}}
    </channel>
</rss>
